# Disk usage
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
# this is promising. Think about using script?
# full_text=<span background="red" foreground="white">Salut</span> #this is promising
command=/$HOME/.config/i3blocks/disk
instance=/
label= 
interval=30

# Network interface monitoring
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
# [iface]
#IFACE=wlan0
# color=#00FF00
# interval=10

# [wifi]
#INTERFACE=wlp3s0
# label=wifi:
# interval=10

# [bandwidth]
# command=/$HOME/.config/i3blocks/bandwidth/bandwidth
# # INTERFACE=eno1
# interval=repeat

# CPU usage
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
command=/$HOME/.config/i3blocks/cpu_usage -w 80
# label=
label= 
interval=1
separator=false
# min_width=CPU 100.00%

[cpu_temp]
command=/$HOME/.config/i3blocks/temperature --chip *-isa-*
label= 
interval=1

[memory]
# command=echo -n "  "; ~/.local/src/i3blocks-contrib/memory/memory | grep -E -o '[0-9]+.[0-9]?G'
command=/$HOME/.config/i3blocks/memory | grep -E -o '[0-9]+.[0-9]?G'
label= 
interval=30

# [load_average]
# label=LOAD
# interval=10

# Battery indicator
# The battery instance defaults to 0.
[battery]
command=/$HOME/.config/i3blocks/batterybar
label=⚡
interval=15

